<Window x:Class="dashb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dashb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="199*"/>
            <ColumnDefinition Width="201*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="100,100,98,292" Text="{Binding Path=SelectedClient.Title}" Background="AliceBlue"></TextBlock>
        <ListBox Margin="10,0,92,81" ItemsSource="{Binding Path=Clients}" DisplayMemberPath="Title" Height="136" VerticalAlignment="Bottom" Grid.Column="1"/>
        <ListBox Margin="10,0,92,245" ItemsSource="{Binding Servers}" DisplayMemberPath="Caption" Height="136" VerticalAlignment="Bottom" Grid.Column="1"/>
    </Grid>
</Window>
