<Window x:Class="dashb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dashb"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="320" MinWidth="480" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="199*"/>
            <ColumnDefinition Width="201*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="10,10,0,0" Text="{Binding Path=SelectedClient.Title}" Background="AliceBlue" HorizontalAlignment="Left" MinWidth="50" VerticalAlignment="Top"/>
        <ListBox Margin="10,200,10,10" ItemsSource="{Binding Path=Clients}" DisplayMemberPath="Title" Grid.Column="1"/>
        <ListBox Margin="10,20,10,0" ItemsSource="{Binding Servers}" DisplayMemberPath="Caption" Height="136" VerticalAlignment="Top" Grid.Column="1"/>
    </Grid>
</Window>
